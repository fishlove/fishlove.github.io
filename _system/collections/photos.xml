<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="general">
            <field name="gallery" type="itemlist" label="Collection" filter="string" class="form-control" admintable="true" required="true" app="galleries"/>
            <field name="fish" type="itemlist" app="fish" label="Fish" filter="string" class="form-control" admintable="true" />
            <field name="params" type="multiform" label="Product Options" filter="array">
                <field name="param" type="text" label="Name" filter="string" class="form-control" />
                <field name="modifier" type="list" label="Modifier" filter="string" class="form-control">
                    <option value=""></option>
                    <option value="+">+</option>
                    <option value="-">-</option>
                    <option value="=">=</option>
                </field>
                <field name="price" type="text" label="Price" filter="integer" class="form-control" />
            </field>
        </fieldset>
        <fieldset name="options">
            <field name="image" type="media" label="Image" filter="string" class="form-control" directory="images/collections" />
        </fieldset>
    </fields>
</form>
