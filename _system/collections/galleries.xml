<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="general">
            <field name="heading" type="text" label="Heading" filter="string" class="form-control" />
            <field name="sponsors" type="multiform" label="Sponsors" filter="array">
                <field name="name" type="text" label="Name" filter="string" class="form-control" />
                <field name="logo" type="media" label="Logo" filter="string" class="form-control" directory="images/partners" />
                <field name="url" type="text" label="Website" filter="url" class="form-control" />
            </field>
        </fieldset>
        <fieldset name="options">
            <field name="year" label="Year" filter="string" class="form-control" admintable="true"/>
      			<field name="sell_posters" type="list" default="1" label="Enable poster sales" class="form-control" filter="int">
      				<option value="0">JNO</option>
      				<option value="1">JYES</option>
      			</field>
      			<field name="image" type="media" label="Cover Image" filter="string" class="form-control" directory="images/collections" />
        </fieldset>
    </fields>
</form>
